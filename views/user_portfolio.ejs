<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('./partials/head.ejs') %>
    <%- include ('./partials/header.ejs') %>
    <title>Welcome!</title>
  </head>
  <body>
    <h2 class="login-h1">My Stocks</h2>
    <button type="button" name="add-stock" onclick="location.href='/users/addstock'" id="add-btn" class="btn btn-secondary">ADD STOCK</button>
    <div class="table-container">
      <table class="table table-striped table-hover">
        <tr>
          <th>Ticker Symbol</th>
          <th>Company Name</th>
          <th>Last Closing Price</th>
        </tr>
        <% for(let i = 0; i < stocks.length; i++) { %>
          <tr onclick="location.href='/<%=stocks[i]._id%>'">
            <td><%=stocks[i].ticker%></td>
            <td><%=stocks[i].company%></td>
            <td>$<%=stocks[i].price%></td>
          </tr>
        <% } %>
      </table>
    </div>
  </body>
</html>
